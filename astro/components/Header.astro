---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_LINKS } from "../config";
---

<header class="">
  <div
    class="bg-gray-50 flex flex-col items-center justify-center mt-[30vh] relative z-20"
  >
    <a
      href="/"
      class="absolute rounded-full w-[200px] -translate-y-1/2 top-0 z-20 border-8 border-gray-50"
    >
      <img src="/photo.jpg" class="rounded-full z-30" />
      <!-- <div
        class="bg-red-50 rounded-full absolute top-0 bottom-0 left-0 right-0 animate-ping z-10"
      >
      </div> -->
    </a>
    <h2 class="font-bold mt-[100px] pt-2 text-2xl tracking-wide">
      {SITE_TITLE}
    </h2>
    <p class="text-gray-800 text-center px-8 tracking-tight">
      {SITE_DESCRIPTION}
    </p>

    <nav class="flex justify-center gap-4 mt-4 items-center">
      {
        SITE_LINKS.map((link) => (
          <HeaderLink href={link.url} class="text-sm">
            {link.title}
          </HeaderLink>
        ))
      }
    </nav>

    <hr class="border-1 border-gray-200 w-11/12 my-2 mt-4" />
  </div>

