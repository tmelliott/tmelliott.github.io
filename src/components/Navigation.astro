---
const items = [
  {
    title: "About",
    url: "#",
    active: false,
  },
  {
    title: "Projects",
    url: "#",
    active: false,
  },
  {
    title: "Software",
    url: "#",
    active: false,
  },
  {
    title: "Contact",
    url: "#",
    active: false,
  },
];
---

<div class="w-full flex justify-center h-20 items-center">
  <nav
    class="bg-purple-50 rounded-full py-2 text-sm px-12 shadow-lg flex gap-6 text-purple-950 bg-opacity-80"
  >
    {
      items.map((item) => {
        return (
          <a href={item.url} class="relative hover:text-purple-800">
            {item.title}
            {item.active && (
              <div class="absolute bottom-0 left-0 right-0 h-[1px] bg-purple-950 rounded-full transition-all" />
            )}
          </a>
        );
      })
    }
  </nav>
</div>
